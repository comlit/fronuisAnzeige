<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Radio">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="6dp">


            <Button
                android:id="@+id/button1"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="WDR 2"
                android:drawableLeft="@drawable/ic_round_play_arrow_24"/>

            <Button
                android:id="@+id/button2"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1Live"
                android:drawableLeft="@drawable/ic_round_play_arrow_24"/>
            <Button
                android:id="@+id/button3"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="WDR 5"
                android:drawableLeft="@drawable/ic_round_play_arrow_24"/>
            <Button
                android:id="@+id/button4"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="DLF Nova"
                android:drawableLeft="@drawable/ic_round_play_arrow_24"/>
            <Button
                android:id="@+id/button5"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Antenne MÃ¼nster"
                android:drawableLeft="@drawable/ic_round_play_arrow_24"/>

        </LinearLayout>

        <it.beppi.knoblibrary.Knob
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/knob"
            app:kNumberOfStates="60"
            app:kBorderWidth="6dp"
            app:kCircularIndicatorColor="@color/purple_500"
            />

    </LinearLayout>



    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_round_swap_horiz_24"
        android:layout_margin="16dp"
        app:backgroundTint="#FFC107"/>

</RelativeLayout>